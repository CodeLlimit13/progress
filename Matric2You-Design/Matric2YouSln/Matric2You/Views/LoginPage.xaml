<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Matric2You.Views.LoginPage"
             Title="">
    <Grid RowDefinitions="Auto,*">
        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="35"
                             VerticalOptions="CenterAndExpand">

                <!-- LOGO -->
                <Image Source="dotnet_bot.png" 
                   HeightRequest="150" 
                   HorizontalOptions="Center" />

                <!-- M2U Title -->
                <Label Text="M2U"
                   FontSize="72"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#0078D7" />

                <!-- Welcome Card -->
                <Border BackgroundColor="White" 
                    Stroke="#E0E0E0"
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 16"  
                    Padding="25" 
                    Margin="10">

                    <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

                        <Label Text="Welcome to M2U"
                           FontSize="26"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#1A1A1A" />

                        <Label Text="Your gateway to smarter studying."
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="Gray"/>

                        <HorizontalStackLayout Spacing="10">
                            <Label
                                Text="Email:"
                                FontSize="18"
                                HorizontalOptions="Start"
                                VerticalOptions="Start"
                                Padding="10" 
                                />
                            <Entry
                                Placeholder="Input Email"
                                x:Name="EmailAddress"
                                WidthRequest="200"
                                HorizontalOptions="End"
                                VerticalOptions="End"
                                />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label
                                Text="Password:"
                                FontSize="18"
                                HorizontalOptions="Start"
                                VerticalOptions="Start"
                                Padding="10"
                                />

                            <Entry
                                Placeholder="Input Password"
                                x:Name="Password"
                                WidthRequest="200"
                                HorizontalOptions="End"
                                VerticalOptions="End"
                                />

                        </HorizontalStackLayout>

                        <Button
                            Text="Next"
                            Clicked="OnNextClicked1"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="#0078D7" 
                            CornerRadius="25"
                            HeightRequest="55"
                            WidthRequest="220"
                            HorizontalOptions="Center"
                            />

                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Matric2You.Views.Onbording1"
             Title="">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- LOGO on top -->
            <Image Source="dotnet_bot.png" 
                   HeightRequest="150" 
                   HorizontalOptions="Center" />

            <!-- M2U Title -->
            <Label Text="M2U"
                   FontSize="70"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <!-- Gray Border with Form -->
            <Border Background="WhiteSmoke" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 8"  
                    Padding="10" 
                    Margin="5">

                <VerticalStackLayout Padding="30,0" Spacing="25">

                    <Label
                        Text="Personal Information"
                        Style="{StaticResource Headline}"
                        SemanticProperties.HeadingLevel="Level1" />

                    <!-- Name -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Name:" VerticalOptions="Center" />
                        <Entry Placeholder="" x:Name="Name" WidthRequest="200"/>
                    </HorizontalStackLayout>
                    
                    <!-- Surname -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Surname:" VerticalOptions="Center" />
                        <Entry Placeholder="" x:Name="Surname" WidthRequest="200"/>
                    </HorizontalStackLayout>
                    
                    <!-- Gmail -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Gmail:" VerticalOptions="Center" />
                        <Entry Placeholder="" x:Name="Gmail" WidthRequest="200"/>
                    </HorizontalStackLayout>
                    
                    <!-- IdNumber -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="IdNumber:" VerticalOptions="Center" />
                        <Entry Placeholder="" x:Name="IdNumber" WidthRequest="200"/>
                    </HorizontalStackLayout>
                    
                    <!-- Contact Number -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Contact Number:" VerticalOptions="Center" />
                        <Entry Placeholder="" x:Name="ContactNumber" WidthRequest="200"/>
                    </HorizontalStackLayout>
                    
                    <!-- Date of Birth -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Date Of Birth:" VerticalOptions="Center" />
                        <Entry Placeholder="" x:Name="AgePicker" WidthRequest="200"/>
                    </HorizontalStackLayout>

                    <!-- Level Of Education -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Level Of Education:" VerticalOptions="Center" />
                        <Picker x:Name="LevelOfEducation" Title="Select Level Of Education" WidthRequest="240" HorizontalOptions="Start">
                            <Picker.Items>
                                <x:String>High School</x:String>
                                <x:String>Diploma</x:String>
                                <x:String>Bachelor's Degree</x:String>
                                <x:String>Master's Degree</x:String>
                                <x:String>Doctorate</x:String>
                                <x:String>Other</x:String>
                            </Picker.Items>
                        </Picker>
                    </HorizontalStackLayout>
                    
                    <!-- Gender -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Gender:" VerticalOptions="Center" />
                        <Picker x:Name="GenderPicker" Title="Select Gender" WidthRequest="240" HorizontalOptions="Start">
                            <Picker.Items>
                                <x:String>Male</x:String>
                                <x:String>Female</x:String>
                                <x:String>Other</x:String>
                            </Picker.Items>
                        </Picker>
                    </HorizontalStackLayout>

                    <!-- City/Town -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="City/Town:" VerticalOptions="Center" />
                        <Picker x:Name="CityTownPicker" Title="Select City/Town" WidthRequest="240" HorizontalOptions="Start">
                            <Picker.Items>
                                <x:String>Cape Town</x:String>
                                <x:String>Joburg</x:String>
                                <x:String>Other</x:String>
                            </Picker.Items>
                        </Picker>
                    </HorizontalStackLayout>

                    <!-- Home Language -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Home Language:" VerticalOptions="Center" />
                        <Picker x:Name="LanguagePicker" Title="Select Language" WidthRequest="200" HorizontalOptions="Start">
                            <Picker.Items>
                                <x:String>English</x:String>
                                <x:String>Africaans</x:String>
                                <x:String>Xhosa</x:String>
                                <x:String>Zulu</x:String>
                                <x:String>Tswana</x:String>
                                <x:String>Venda</x:String>
                                <x:String>Tsonga</x:String>
                            </Picker.Items>
                        </Picker>
                    </HorizontalStackLayout>

                    <!-- Province -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Province:" VerticalOptions="Center" />
                        <Picker x:Name="ProvincePicker" Title="Select Province" WidthRequest="240" HorizontalOptions="Start">
                            <Picker.Items>
                                <x:String>Western Cape</x:String>
                                <x:String>North West</x:String>
                                <x:String>Northern Cape</x:String>
                                <x:String>Mpumalanga</x:String>
                                <x:String>Limpopo</x:String>
                                <x:String>KwaZulu-Natal</x:String>
                                <x:String>Gauteng</x:String>
                                <x:String>Free State</x:String>
                                <x:String>Eastern Cape</x:String>
                            </Picker.Items>
                        </Picker>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

            <Button Text="Next" 
                    Clicked="OnNextClicked"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="#0078D7" 
                    CornerRadius="12"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
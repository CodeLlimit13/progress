<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="Matric2You.Views.CoursePage"
 Title="">

 <ScrollView>



 <VerticalStackLayout 
 Padding="15" 
 Spacing="15">

 <Label
 Text="Courses"
 FontAttributes="Bold"
 FontSize="Large" 
 />


 <!-- Repeat this block for each course -->
 <Border 
 Stroke="Black"
 StrokeThickness="1.5"
 StrokeShape="RoundRectangle 8"
 Padding="10">

 <Grid ColumnDefinitions="*,Auto">
 <!-- Left side: Course info -->
 <VerticalStackLayout Spacing="4">
 <Image Source="dotnet_bot.png" 
 WidthRequest="60"
 HeightRequest="60"
 VerticalOptions="Start" 
 HorizontalOptions="Start" />
 <Label Text="Course Name1" FontSize="18" FontAttributes="Bold" />
 <Label Text="Duration:6 Weeks" FontSize="14" TextColor="Gray"/>
 <Label Text="Difficulty: Intermediate" FontSize="14" TextColor="Gray"/>
 </VerticalStackLayout>

 <!-- Right side: Start button -->
 <Button 
 Text="Start" 
 Clicked="OnNextClicked"
 Grid.Column="1"
 VerticalOptions="Center"
 HorizontalOptions="End"
 BackgroundColor="#0078D7"
 TextColor="White"
 CornerRadius="8"
 Padding="15,8"/>
 </Grid>
 </Border>

